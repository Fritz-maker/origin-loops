        <!-- Progress Section -->
        <div class="progress-section">
            <div class="score-display">
                <span>Origin Score: </span>
                <span id="current-score">0</span>
            </div>
            <div id="progress-indicator" class="progress-indicator">
                Life's Spark: Awaiting perspective selection
            </div>
            <div id="unlock-status" class="unlock-status">
                Next Loop unlocks at 50 points
            </div>
        </div>

        <!-- Footer Navigation -->
        <footer class="loop-footer">
            <a href="index.html" class="footer-link">‚Üê Return to Origin Loops</a>
            <span class="loop-position">Loop 6.2 of 6</span>
